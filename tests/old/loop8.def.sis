definition main

function foo(N:integer; T:integer  returns integer)
   for initial
      i := 0;
      s := 0;
      t := T
   repeat
      s := old s + old i;
      i := if (t>0) then
                old i + t
           else
                old i + 1
           end if
   while ( (s <= N) & (old i <= 100) )
      returns value of s
   end for
end function
